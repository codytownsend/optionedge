# Environment configuration for Options Trading Engine
# Copy this file to .env and update with your actual values

# Application Configuration
APP_NAME=options-engine
APP_VERSION=0.1.0
APP_ENVIRONMENT=development
APP_DEBUG=true

# API Keys and Authentication
TRADIER_API_KEY=your_tradier_api_key_here
TRADIER_ACCOUNT_ID=your_tradier_account_id_here
TRADIER_USE_SANDBOX=true

YAHOO_API_KEY=your_yahoo_api_key_here
YAHOO_RAPIDAPI_KEY=your_rapidapi_key_here

FRED_API_KEY=your_fred_api_key_here

QUIVER_API_KEY=your_quiver_api_key_here
QUIVER_TOKEN=your_quiver_token_here

# Database Configuration (if using database)
DATABASE_URL=sqlite:///options_engine.db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Cache Configuration
CACHE_TYPE=memory
CACHE_DEFAULT_TTL=3600
CACHE_MAX_SIZE=10000

# Redis Configuration (if using Redis cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/options_engine.log
LOG_MAX_SIZE=10
LOG_BACKUP_COUNT=5
LOG_CONSOLE_ENABLED=true
LOG_FILE_ENABLED=true

# Trading Configuration
TRADING_MIN_POP=0.65
TRADING_MIN_CREDIT_TO_MAX_LOSS=0.33
TRADING_MAX_LOSS_PER_TRADE=500
TRADING_MAX_QUOTE_AGE_MINUTES=10
TRADING_MAX_DELTA_EXPOSURE=0.30
TRADING_MIN_VEGA_EXPOSURE=-0.05
TRADING_MAX_TRADES_PER_SECTOR=2
TRADING_DEFAULT_NAV=100000

# Liquidity Requirements
LIQUIDITY_MIN_VOLUME=10
LIQUIDITY_MIN_OPEN_INTEREST=100
LIQUIDITY_MAX_SPREAD_PCT=0.50

# Market Data Configuration
MARKET_DATA_REFRESH_INTERVAL=60
OPTIONS_CHAIN_REFRESH_INTERVAL=300
FUNDAMENTALS_REFRESH_INTERVAL=3600
ECONOMIC_DATA_REFRESH_INTERVAL=86400

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_COLLECTION_INTERVAL=60
ALERTS_ENABLED=false
ALERT_API_ERROR_RATE_THRESHOLD=0.05
ALERT_PROCESSING_TIME_THRESHOLD=30

# Performance Configuration
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=1.0
BACKOFF_FACTOR=2.0

# Security Configuration
SECRET_KEY=your_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRATION=3600

# Development Configuration
DEV_AUTO_RELOAD=true
DEV_MOCK_DATA=false
DEV_VERBOSE_LOGGING=true
DEV_ENABLE_PROFILING=false

# Testing Configuration
TEST_DATABASE_URL=sqlite:///test_options_engine.db
TEST_USE_MOCK_DATA=true
TEST_SKIP_EXTERNAL_APIS=true
TEST_PARALLEL_WORKERS=4

# Custom Symbol Lists (comma-separated)
BROAD_MARKET_SYMBOLS=SPY,QQQ,IWM,AAPL,MSFT,GOOGL,AMZN,TSLA,META,NVDA
ETF_FLOW_SYMBOLS=SPY,QQQ,IWM,XLF,XLK,XLE,XLI,XLV,XLY,XLP
CUSTOM_WATCHLIST=

# Feature Flags
FEATURE_PORTFOLIO_OPTIMIZATION=true
FEATURE_SENTIMENT_ANALYSIS=true
FEATURE_TECHNICAL_ANALYSIS=true
FEATURE_FUNDAMENTAL_ANALYSIS=true
FEATURE_FLOW_ANALYSIS=true
FEATURE_RISK_MANAGEMENT=true
FEATURE_BACKTESTING=false
FEATURE_PAPER_TRADING=false
FEATURE_LIVE_TRADING=false